<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_floating_material_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.MapsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutMaps"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Click and hold on the map to choose a street"
            android:id="@+id/textViewMap"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:textSize="10dp"/>

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="Search"
            android:id="@+id/buttonSearchMaps"
            android:onClick="onButtonClick"
            android:nestedScrollingEnabled="true"
            android:background="@mipmap/search"
            android:layout_alignRight="@+id/textViewMap"
            android:layout_marginLeft="5dip"
            android:layout_alignParentRight="true"/>

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="Back"
            android:id="@+id/buttonBackMaps"
            android:layout_alignRight="@+id/buttonSearchMaps"
            android:onClick="onButtonBackMapsClick"
            android:nestedScrollingEnabled="true"
            android:background="@mipmap/back"
            android:layout_marginLeft="5dip"
            android:layout_alignParentRight="true"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linearLayoutMaps"
        android:layout_marginTop="5dp">
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>


</RelativeLayout>
