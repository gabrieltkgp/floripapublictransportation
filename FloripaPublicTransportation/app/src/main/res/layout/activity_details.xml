<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_floating_material_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="arctouch.com.floripapublictransportation.activity.DetailsActivity">

    <TextView
        android:id="@+id/textViewRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Route"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewRoute"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STOPS"
                android:id="@+id/textViewStops"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dip"
                android:textColor="#ffffff" />

            <ListView
                android:id="@+id/listViewStops"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEPARTURES"
                android:id="@+id/textViewDeparture"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dip"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WEEKDAY"
                android:id="@+id/textViewWeekday"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dip"
                android:textColor="#ffffff" />

            <GridView
                android:id="@+id/gridViewWeekday"
                android:numColumns="auto_fit"
                android:gravity="center"
                android:columnWidth="50dp"
                android:stretchMode="columnWidth"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            </GridView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SATURDAY"
                android:id="@+id/textViewSaturday"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff" />

            <GridView
                android:id="@+id/gridViewSaturday"
                android:numColumns="auto_fit"
                android:gravity="center"
                android:columnWidth="50dp"
                android:stretchMode="columnWidth"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            </GridView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUNDAY"
                android:id="@+id/textViewSunday"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff" />

            <GridView
                android:id="@+id/gridViewSunday"
                android:numColumns="auto_fit"
                android:gravity="center"
                android:columnWidth="50dp"
                android:stretchMode="columnWidth"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            </GridView>

            <ImageButton
                android:id="@+id/buttonBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/back"
                android:onClick="onButtonBackClick"
                android:text="Back"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
