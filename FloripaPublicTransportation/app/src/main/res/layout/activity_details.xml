<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_floating_material_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="arctouch.com.floripapublictransportation.activity.DetailsActivity">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="100"
        android:id="@+id/progressBarDetails"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:id="@+id/linearLayoutDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewRoute"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:text="Route"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/textViewRoute"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dip"
            android:background="@mipmap/back"
            android:onClick="onButtonBackClick"
            android:text="Back" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutDetails"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewStops"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:gravity="center_horizontal"
                android:text="STOPS"
                android:textColor="#ffffff" />

            <ListView
                android:id="@+id/listViewStops"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewStops"/>

            <TextView
                android:id="@+id/textViewDeparture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dip"
                android:gravity="center_horizontal"
                android:text="DEPARTURES"
                android:textColor="#ffffff"
                android:layout_below="@+id/listViewStops"/>

            <TextView
                android:id="@+id/textViewWeekday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dip"
                android:gravity="center_horizontal"
                android:text="WEEKDAY"
                android:textColor="#ffffff"
                android:layout_below="@+id/textViewDeparture"/>

            <GridView
                android:id="@+id/gridViewWeekday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnWidth="50dp"
                android:gravity="center_horizontal"
                android:numColumns="auto_fit"
                android:layout_below="@+id/textViewWeekday"/>

            <TextView
                android:id="@+id/textViewSaturday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="SATURDAY"
                android:textColor="#ffffff"
                android:layout_marginTop="5dip"
                android:layout_below="@+id/gridViewWeekday"/>

            <GridView
                android:id="@+id/gridViewSaturday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnWidth="50dp"
                android:gravity="center"
                android:numColumns="auto_fit"
                android:stretchMode="columnWidth"
                android:layout_below="@+id/textViewSaturday"/>

            <TextView
                android:id="@+id/textViewSunday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="SUNDAY"
                android:textColor="#ffffff"
                android:layout_marginTop="5dip"
                android:layout_below="@+id/gridViewSaturday"/>

            <GridView
                android:id="@+id/gridViewSunday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnWidth="50dp"
                android:gravity="center"
                android:numColumns="auto_fit"
                android:stretchMode="columnWidth"
                android:layout_below="@+id/textViewSunday"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
